# Configuración de Doxygen para Sistema IoT de Sensores

PROJECT_NAME           = "Sistema IoT de Gestión Polimórfica de Sensores"
PROJECT_NUMBER         = 1.0
PROJECT_BRIEF          = "Sistema de monitoreo de sensores con POO avanzada"

OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/docs
CREATE_SUBDIRS         = NO

INPUT                  = @CMAKE_CURRENT_SOURCE_DIR@
FILE_PATTERNS          = *.cpp *.h
RECURSIVE              = YES
EXCLUDE_PATTERNS       = */build/* */CMakeFiles/*

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES

GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_COLORSTYLE_HUE    = 220
HTML_COLORSTYLE_SAT    = 100
HTML_COLORSTYLE_GAMMA  = 80

GENERATE_LATEX         = NO

GENERATE_TREEVIEW      = YES

HAVE_DOT               = YES
DOT_NUM_THREADS        = 0
CLASS_GRAPH            = YES
COLLABORATION_GRAPH    = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES

OPTIMIZE_OUTPUT_FOR_C  = NO
BUILTIN_STL_SUPPORT    = YES
